<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "GoldenGuard")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
</head>
<body>
    @{
        var isAuth = Context.Request.Cookies.ContainsKey("gg.jwt");
        var role = Context.Request.Cookies["gg.role"];
    }
    <nav class="navbar navbar-expand-lg shadow-sm" style="background:#042646;">
        <div class="container">
            <a class="navbar-brand fw-bold text-white" href="/">Golden<span style="color:#D4AF37">Guard</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Users">Usuários</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Transactions/ByUser">Transações</a></li>

                    @if (!isAuth)
                    {
                        <li class="nav-item"><a class="nav-link text-white" href="/Auth/Login">Entrar</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><span class="nav-link text-white-50">@role</span></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Auth/Logout">Sair</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="py-4 mt-5" style="background:#0b1a3a;">
        <div class="container text-center text-white-50 small">
            GoldenGuard • Educação financeira e prevenção • @DateTime.Now.Year
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>